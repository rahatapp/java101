import java.util.Scanner;
public class Main {
    public static void main(String[] args) {
       //değişkenlerimizi oluşrturalım

        int dik,taban,alan;


        //kullanıcıdan verileri alalım
        Scanner girdi=new Scanner(System.in);
        System.out.println("Dik Kenarı Giriniz: ");
        dik=girdi.nextInt();
        System.out.println("Taban Kenarı Giriniz :");
        taban=girdi.nextInt();

        alan=(dik*taban/2);
        System.out.println("Alan: "+alan);

    }


}
